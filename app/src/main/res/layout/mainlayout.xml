<?xml version="1.0" encoding="UTF-8"?>

    <androidx.core.widget.NestedScrollView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:layout_height="fill_parent"
    android:layout_width="wrap_content"
    android:background="@drawable/n"
    >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">



    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerHomeId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:id="@+id/appsLinkID"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/recyclerHomeId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1D2E63"
        >

        <TextView
            android:id="@+id/txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Install This Apps\nসকল প্রকার এসএমএস"
            android:gravity="center"
            android:textColor="#fff"
            android:textSize="25dp"
            android:background="#1D2E63"
            />


        <ImageView
            android:id="@+id/imageLink"
            android:layout_below="@+id/txt"
            android:layout_centerInParent="true"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/home_icon"
            android:background="#1D2E63"
            />

    </RelativeLayout>


</RelativeLayout>

</androidx.core.widget.NestedScrollView>